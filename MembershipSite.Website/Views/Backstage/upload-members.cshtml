@model MembershipSite.ViewModels.UploadMembers
<div class="container my-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h1 class="card-title mb-4 text-primary">Upload Members</h1>

            <div class="alert alert-info">
                <p class="mb-2">
                    Upload a CSV file with the following column headers:
                </p>
                <ul class="mb-0">
                    <li><strong>"MemberNumber"</strong> (5 characters maximum)</li>
                    <li><strong>"Name"</strong> (100 characters maximum)</li>
                    <li><strong>"Email"</strong> (100 characters maximum)</li>
                </ul>
            </div>

            <div class="card mb-4 bg-light">
                <div class="card-header">
                    <h2 class="h5 mb-0">Notes</h2>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Uploaded members will be added if they do not match an existing member email address.</li>
                        <li>Uploaded members will be approved if they are not already approved.</li>
                        <li>When a match on member email occurs, name and email fields will be updated to the new values.</li>
                        <li>All fields are trimmed of leading and trailing spaces on upload.</li>
                        <li>Member number can be non-numeric if required and is not case sensitive.</li>
                        <li>Failed uploads (missing data or field too long) will be reported at the end.</li>
                        <li>There must be a header row and it should match the column names listed below.</li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">CSV file sample</h3>
                </div>
                <div class="card-body bg-dark text-light">
                    <pre class="mb-0">MemberNumber,Name,Email
12345,John Doe,john@example.com
23456,Jane Doe,jane@example.com
34567,Jim Doe,jim@example.com</pre>
                </div>
            </div>

            <form method="post" enctype="multipart/form-data" class="mt-4">
                <div class="mb-3">
                    <label for="file" class="form-label fw-bold">Select CSV file</label>
                    <input type="file" class="form-control" id="file" required asp-for="File" accept=".csv">
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-cloud-upload me-2"></i>Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

